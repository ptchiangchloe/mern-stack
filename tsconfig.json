{
    "compilerOptions": {
        "outDir": "./static/",
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "webpack",
        "dist"
    ],
    "compileOnSave": false
}